# say $policy -> managed_policy_path;
$policy -> set_strict_policy;


=pod

sudo /home/regular/perl5/perlbrew/perls/perl-5.37.8/bin/perl -I /home/regular/perl5/perlbrew/perls/perl-5.37.8/bin/perl chrome_policy
